<%= form_with(model: environment, local: true) do |form| %>
  <% if environment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(environment.errors.count, "error") %> prohibited this environment from being saved:</h2>

      <ul>
      <% environment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :is_advisors_register_active, 'Permitir el registro de monitores' %>
    <%= form.check_box :is_advisors_register_active %>
  </div>

  <div class="field">
    <%= form.label :is_students_register_active, 'Permitir el registro de estudiantes' %>
    <%= form.check_box :is_students_register_active %>
  </div>

  <div class="field">
    <%= form.label :is_schedules_register_active, 'Permitir el registro de horarios' %>
    <%= form.check_box :is_schedules_register_active %>
  </div>

  <div class="field">
    <%= form.label :semester_id, 'Semestre' %>
    <%= form.collection_select :semester_id, Semester.all, :id, :name, prompt: true %>
  </div>

  <div class="field">
    <%= form.label :month_id, 'Mes' %>
    <%= form.collection_select :month_id, Month.all, :id, :name, prompt: true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
